{
  "name": "Pod de banane",
  "short_name": "PodB",
  "start_url": "/index.html",
  "background_color": "#FFFFFF",
  "theme_color": "#30c885",
  "orientation": "any",
  "description": "Application de gestion de podcasts",
  "categories": [
    "entertainment",
    "fun"
  ],
  "lang": "fr",
  "id": "/index.html",
  "scope": "/",
  "display": "standalone",
  "dir": "ltr",
  "display_override": [
    "standalone",
    "browser"
  ],
  "launch_handler": {
    "client_mode": "auto"
  },
  "icons": [
    {
      "src": "assets/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "assets/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "assets/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/open.html",
      "accept": {
        "text/csv": [
          ".csv"
        ]
      }
    }
  ],
  "share_target": {
    "action": "/functions/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": [
            "image/*",
            "text/csv"
          ]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Ajouter un snack",
      "short_name": "Ajout snack",
      "description": "Accéder rapidement à l'ajout de snack",
      "url": "/index.html",
      "icons": [
        {
          "src": "/assets/manifest-icon-192.maskable.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Voir le dashborard",
      "short_name": "Le dashboard",
      "description": "Accéder au dashboard",
      "url": "/Dashboard.html",
      "icons": [
        {
          "src": "/assets/manifest-icon-192.maskable.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ]
}